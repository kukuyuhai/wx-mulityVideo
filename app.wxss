/**app.wxss**/

.section{
  position: relative;
}
.controls {
  position: relative;
  width: 100%;
  height:450rpx;
}

.video_background{
  width: 100%;
  height: 100%;
}

.play_btn{
  width: 48px;
  height: 48px;
}

.play_view {
  position: absolute;
  width: 48px;
  height: 48px;
  z-index: 100;
  left: 50%;
  top: 50%;
  margin-left: -24px;
  margin-top: -24px;
}

.time {
  position: absolute;
  right: 10px;
  bottom: 10px;
  color: white;
  font-size: 26rpx;
}

.section-des {
  padding: 38rpx 20rpx;
}

.video_title{
  font-size:38rpx;
}

.video_content {
  display: -webkit-box;
  font-size: 28rpx;
  color: #999;
  /* line-height: 40rpx; */
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 20rpx 0;
  letter-spacing: 2rpx;
}

.video_content_all{
  display: -webkit-box;  
  font-size: 28rpx;
  color: #999;
  margin: 20rpx 0;
  letter-spacing: 2rpx;
}

.video_pro{
  color: #999;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}


video {
  width: 100%;
  height: 450rpx;  
}

.navigator-arrow {
  padding-right: 12rpx;
  height: 32rpx;
}

.rotate90{
  transform: rotate(90deg);
  margin-right: 8px;
  margin-top: 4px;
}

.rotate-90{
  transform: rotate(-90deg);
  margin-right: 8px;
  margin-top: -4px;
}

.toggle_btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 8rpx;
  width: 8rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 8rpx;
}

.icon{
  height: 20px;
  width: 20px;
  margin-right: 12rpx;
}


